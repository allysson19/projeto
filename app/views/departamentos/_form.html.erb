<%= form_with(model: departamento) do |form| %>
  <% if departamento.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(departamento.errors.count, "error") %> proibiu que este departamento fosse salvo:</h2>

      <ul>
        <% departamento.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nomedepartamento, style: "display: block" %>
    <%= form.text_field :nomedepartamento %>
  </div>

  <div>
    <%= form.label :descricao, style: "display: block" %>
    <%= form.text_area :descricao %>
  </div>

  <div>
    <%= form.label :codigodep, style: "display: block" %>
    <%= form.text_field :codigodep %>
  </div>

  <div>
    <%= form.label :localizacao, style: "display: block" %>
    <%= form.text_field :localizacao %>
  </div>

  <div>
    <%= form.label :string, style: "display: block" %>
    <%= form.text_field :string %>
  </div>

  <div>
    <%= form.label :statusdep, style: "display: block" %>
    <%= form.text_field :statusdep %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
